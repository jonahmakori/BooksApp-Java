<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/cardview_id"
android:clickable="true"
android:foreground="?android:attr/selectableItemBackground"
android:layout_width="110dp"
android:layout_height="wrap_content"
xmlns:cardview="http://schemas.android.com/apk/res-auto"
android:layout_margin="5dp"
cardview:cardCornerRadius="4dp">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/favorite_book_thumb"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:background="#2d2d2d"/>

    <Button
        android:id="@+id/delete_favorite"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Delete"
        android:textColor="#FFF"
        android:background="@color/colorPrimary"
        android:visibility="visible" />

    <TextView
        android:visibility="gone"
        android:id="@+id/favorite_book_name"
        android:textColor="#2d2d2d"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/book_title"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/favorite_book_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/favorite_book_name"
        android:paddingBottom="@dimen/songs_count_padding_bottom"
        android:paddingLeft="@dimen/album_title_padding"
        android:paddingRight="@dimen/album_title_padding"
        android:textSize="@dimen/songs_count" />

    <TextView
        android:visibility="gone"
        android:id="@+id/favorite_book_publisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/favorite_book_name"
        android:paddingBottom="@dimen/songs_count_padding_bottom"
        android:paddingLeft="@dimen/album_title_padding"
        android:paddingRight="@dimen/album_title_padding"
        android:textSize="@dimen/songs_count" />


    <ImageView
        android:visibility="gone"
        android:id="@+id/overflow"
        android:layout_width="@dimen/ic_album_overflow_width"
        android:layout_height="@dimen/ic_album_overflow_height"
        android:layout_alignParentRight="true"
        android:layout_below="@id/favorite_book_thumb"
        android:layout_marginTop="@dimen/ic_album_overflow_margin_top"
        android:scaleType="centerCrop"

        />

    <TextView
        android:visibility="gone"
        android:id="@+id/favorite_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="217dp"
        android:text="demo"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />




</LinearLayout>


</android.support.v7.widget.CardView>